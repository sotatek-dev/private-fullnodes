{
  "name": "nem2-faucet",
  "description": "Faucet application for nem2",
  "keywords": [
    "nem",
    "nem2",
    "catapult",
    "blockchain"
  ],
  "website": "https://github.com/44uk/nem2-faucet/",
  "repository": "https://github.com/44uk/nem2-faucet/tree/master",
  "env": {
    "PORT": {
      "value": "80"
    },
    "NEM_PRIVATE_KEY": {
      "value": "__SET_YOUR_KEY__",
      "description": "PrivateKey of Faucet Account that you want to assign."
    },
    "NEM_API_URL": {
      "value": "http://catapult-api.example.com:3000",
      "description": "API URL to connect."
    },
    "NEM_PUBLIC_URL": {
      "required": false,
      "description": "For frontend link url."
    },
    "NEM_NETWORK": {
      "required": false,
      "description": "MAIN_NET, TEST_NET, MIJIN, MIJIN_TEST (if empty, fetch from node.)"
    },
    "NEM_GENERATION_HASH": {
      "required": false,
      "description": "Nemesis block hash. (if empty, fetch from node.)"
    },
    "NEM_MOSAIC_FQN": {
      "required": false,
      "description": "Distribution mosaic that linked namespace."
    },
    "NEM_MOSAIC_HEX": {
      "required": false,
      "description": "Distribution mosaicId."
    },
    "NEM_OUT_MIN": {
      "value": "200000000"
    },
    "NEM_OUT_MAX": {
      "value": "500000000"
    },
    "NEM_OUT_OPT": {
      "required": false
    },
    "NEM_MAX_FEE": {
      "required": false,
      "description": "Transaction Max Fee"
    },
    "NEM_DEADLINE": {
      "required": false,
      "description": "Transaction deadline (min)"
    },
    "NEM_MAX_BALANCE": {
      "value": "100000000000"
    },
    "NEM_MAX_UNCONFIRMED": {
      "value": "99"
    },
    "NEM_WAIT_BLOCK": {
      "value": "0"
    },
    "RECAPTCHA_CLIENT_SECRET": {
      "required": false,
      "description": "(Optional) disabled ReCaptcha if this is blank."
    },
    "RECAPTCHA_SERVER_SECRET": {
      "required": false,
      "description": "(Optional) disabled ReCaptcha if this is blank."
    }
  },
  "addons": [],
  "buildpacks": []
}
